<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#DCDB59"
            android:gravity="center"
            android:text="1"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="#6F6914"
            android:textSize="50sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#757704"
            android:gravity="center"
            android:text="2"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="#595304"
            android:textSize="50sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="4"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#C572C7"
            android:gravity="center"
            android:text="3"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="#723878"
            android:textSize="50sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#F7F800"
            android:text="4"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="#A29A0A"
            android:textSize="50sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#FA0000"
            android:text="5"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="#900503"
            android:textSize="50sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="6"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="#A85733"
            android:text="6"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="#5E2910"
            android:textSize="50sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#EDC1AF"
            android:text="7"
            android:gravity="center"
            android:textAppearance="@android:style/TextAppearance"
            android:textColor="#6F574A"
            android:textSize="50sp" />
    </LinearLayout>
</LinearLayout>